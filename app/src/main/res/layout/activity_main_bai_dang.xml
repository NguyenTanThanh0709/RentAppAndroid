<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:orientation="vertical"
    tools:context=".Activity.Tenant.BaiDang.MainBaiDangActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:id="@+id/tenant_baidangtimtro_click"
        app:cardBackgroundColor="@android:color/transparent"
        android:background="@drawable/rounded_corners">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bài đăng tìm trọ"
            android:textStyle="bold"
            android:layout_margin="20dp"
            android:drawablePadding="8dp"
            android:drawableLeft="@drawable/baseline_person_3_24"
            android:textSize="18sp"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:id="@+id/tenant_baidangtimoghep_click"
        app:cardBackgroundColor="@android:color/transparent"
        android:background="@drawable/rounded_corners">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bài đăng tìm ở ghép"
            android:textStyle="bold"
            android:layout_margin="20dp"
            android:drawablePadding="8dp"
            android:drawableLeft="@drawable/baseline_people_24"
            android:textSize="18sp"/>

    </androidx.cardview.widget.CardView>


</LinearLayout>