<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="6dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    android:id="@+id/carview_mess"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/baseline_person_3_24"
            android:id="@+id/tenkhachhang_mess"
            android:text="ten khach hang"
            android:alpha="0.5"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/baseline_person_3_24"
            android:id="@+id/tenchu_mess"
            android:text="ten chu tro"
            android:alpha="0.5"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/baseline_chat_24"
            android:id="@+id/noidung_mess"
            android:text="ten chu tro"
            android:alpha="0.5"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/baseline_date_range_24"
            android:id="@+id/thoigian_mess"
            android:text="ten chu tro"
            android:alpha="0.5"/>





    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.cardview.widget.CardView>