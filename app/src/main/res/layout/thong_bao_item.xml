<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="6dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    android:id="@+id/carview_timphongtro"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#FF0000"
            android:id="@+id/type_notification"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:text="Loại thông báo"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/baseline_chat_24"
            android:id="@+id/mota_notification"
            android:text="Mô tả"
            android:alpha="0.5"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/baseline_date_range_24"
            android:id="@+id/ngayup_notification"
            android:text="03/07/2023"
            android:alpha="0.5"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/baseline_person_3_24"
            android:id="@+id/tenkhachhang_notification"
            android:text="ten khach hang"
            android:alpha="0.5"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/baseline_person_3_24"
            android:id="@+id/tenchu_notification"
            android:text="ten chu tro"
            android:alpha="0.5"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/baseline_diversity_2_24"
            android:id="@+id/id_notification"
            android:text="id_loai"
            android:alpha="0.5"/>



    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.cardview.widget.CardView>