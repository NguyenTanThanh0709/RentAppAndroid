<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="6dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    android:id="@+id/carview_phongtro"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_listphongtro"
                android:layout_width="match_parent"
                android:layout_height="125dp"

                android:src="@drawable/phongtro" />

            <TextView
                android:id="@+id/giatienTro_listphongtro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignEnd="@id/img_listphongtro"
                android:layout_alignBottom="@id/img_listphongtro"
                android:layout_marginEnd="75dp"

                android:layout_marginBottom="96dp"
                android:background="@color/teal_200"
                android:padding="5dp"
                android:text="5.000.000đ"
                android:textColor="#ff0000"
                android:textSize="10sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/check"
                android:layout_width="20dp"
                android:layout_height="22dp"
                android:layout_alignEnd="@id/img_listphongtro"
                android:layout_alignBottom="@id/img_listphongtro"

                android:layout_marginEnd="135dp"
                android:layout_marginBottom="3dp"
                android:src="@drawable/checked" />

            <ImageView
                android:id="@+id/heart"
                android:layout_width="19dp"
                android:layout_height="22dp"
                android:layout_alignEnd="@id/img_listphongtro"
                android:layout_alignBottom="@id/img_listphongtro"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="99dp"
                android:src="@drawable/heart" />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="6"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/title_listphongtro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/teal_200"
                android:layout_margin="10dp"
                android:text="Tiêu Đề Phòng Trọ"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/diachi_listphongtro"
                    android:drawableLeft="@drawable/baseline_not_listed_location_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textSize="10sp"
                    android:text="Địa chỉ phòng trọ Phòng Trọ"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/dientich_listphongtro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/baseline_square_foot_24"
                    android:layout_margin="5dp"
                    android:textSize="10sp"
                    android:text="Diện tích Phòng Trọ"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ngaythem_listphongtro"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textSize="10sp"
                    android:drawableLeft="@drawable/baseline_date_range_24"

                    android:text="Ngày thêm Phòng Trọ"/>

                <ImageView
                    android:id="@+id/more_listphongtro"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="2"
                    android:src="@drawable/add" />
            </LinearLayout>

        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.cardview.widget.CardView>