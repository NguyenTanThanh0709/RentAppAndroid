<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="6dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    android:id="@+id/carview_baiViet"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4">

            <ImageView
                android:id="@+id/img_baidang"
                android:layout_width="match_parent"
                android:layout_height="200dp"

                android:src="@drawable/phongtro" />

            <TextView
                android:id="@+id/giatienTro_baidang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignEnd="@id/img_baidang"
                android:layout_alignBottom="@id/img_baidang"
                android:layout_marginEnd="86dp"

                android:layout_marginBottom="127dp"
                android:background="@color/teal_200"
                android:padding="5dp"
                android:text="5.000.000đ"
                android:textColor="#ff0000"
                android:textSize="10sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/check"
                android:layout_width="20dp"
                android:layout_height="22dp"
                android:layout_alignEnd="@id/img_baidang"
                android:layout_alignBottom="@id/img_baidang"

                android:layout_marginEnd="119dp"
                android:layout_marginBottom="45dp"
                android:src="@drawable/checked" />

            <ImageView
                android:id="@+id/heart"
                android:layout_width="19dp"
                android:layout_height="22dp"
                android:layout_alignEnd="@id/img_baidang"
                android:layout_alignBottom="@id/img_baidang"
                android:layout_marginEnd="18dp"
                android:layout_marginBottom="128dp"
                android:src="@drawable/heart" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title_baidang"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"

                    android:layout_weight="9"
                    android:text="Tiêu Đề Phòng Trọ"
                    android:textStyle="bold"
                    android:textColor="@color/purple_700"

                    android:textSize="17sp" />

                <ImageView
                    android:id="@+id/yeuthich"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/bookmark" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/diachi_baidang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:drawableLeft="@drawable/baseline_not_listed_location_24"
                    android:text="Địa chỉ phòng trọ Phòng Trọ"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dientich_baidang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:drawableLeft="@drawable/baseline_square_foot_24"
                    android:text="Diện tích Phòng Trọ"
                    android:textSize="10sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tiencoc_baidang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:drawableRight="@drawable/baseline_price_check_24"
                    android:drawableLeft="@drawable/baseline_money_off_24"
                    android:text="Tiền Cọc"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ngaythem_baidang"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="8"
                    android:drawableLeft="@drawable/baseline_date_range_24"
                    android:text="Ngày thêm Phòng Trọ"

                    android:textSize="10sp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mota_baidang"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_margin="5dp"
                    android:drawableLeft="@drawable/baseline_deblur_24"
                    android:text="Mô tả sơ qua"

                    android:textSize="8sp" />


            </LinearLayout>

        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.cardview.widget.CardView>